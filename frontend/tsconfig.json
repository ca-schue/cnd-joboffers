{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2022",
    "allowJs": true,
    "checkJs": false,
    "jsx": "react",
    "mapRoot": "./",
    "outDir": "./build",
    "rootDir": "./src",
    "removeComments": true,
    "pretty": true,
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules"
  ]
}
